<%} %>
<% if (messageOrderAccept) {%>
    <div id="myAlert" class="alert alert-primary accept" ><%= messageOrderAccept %></div>
<%} %>

<script>
  // Function to show the alert after 3 seconds
  function showAlert() {
    var alertEl = document.getElementById('myAlert');
    alertEl.style.display = 'block';
    setTimeout(function() {
      alertEl.style.display = 'none';
    }, 7000);
  }

  // Call the showAlert function after 3 seconds
  setTimeout(showAlert);
</script>
